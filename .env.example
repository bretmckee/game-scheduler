# Discord Game Scheduling System Environment Configuration

# Discord Application Credentials
DISCORD_BOT_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here
DISCORD_REDIRECT_URI=http://localhost:3000/api/v1/auth/callback

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=game_scheduler
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_change_in_production
DATABASE_URL=postgresql+asyncpg://postgres:dev_password_change_in_production@postgres:5432/game_scheduler

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
CELERY_RESULT_BACKEND=redis://redis:6379/1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
JWT_SECRET_KEY=dev_secret_key_change_in_production

# Bot Configuration
BOT_COMMAND_PREFIX=!
BOT_DEBUG=true

# Scheduler Configuration
SCHEDULER_DEBUG=true
NOTIFICATION_CHECK_INTERVAL=300  # 5 minutes

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development Configuration
ENVIRONMENT=development